<% include ./partials/Headers.ejs %>
<link rel="stylesheet" href="/stylesheets/register.css"> 
<div class="container">
    <div class="content">
      <!--pinterest logo-->
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
      <p class="header">Login account to see more</p>
      <% if (error.length > 0){ %>
        <p class="errormess"><%= error %></p>
        <% }%>
      <form action="login" method="post">

      <input type="text" name ="username" placeholder="UserName" class="detail" /><br/>
      <input type="password" name="password" placeholder="Password" class="detail" />

      <a href="">Forgot your password?</a>

      <input type="submit" class="btn int" value="Login Account">
      </form>
      <p class="or">OR</p>
      <button class="btn ggl">
        <i
          class="fab fa-google"
          style="color: rgb(11, 241, 22); padding-right: 10px"
        ></i
        ><a href="#">Continue with Google</a>
      </button>

      <footer>
        <p>
          By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
        </p>
        <hr />
        <a href="/register">Not on Pinterest yet? Sign Up</a>
      </footer>
    </div>
  </div>
<% include ./partials/footer.ejs %>